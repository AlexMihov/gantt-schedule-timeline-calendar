$bg-dark-1 = hsl(192, 15%, 98%)
$bg-dark-2 = hsl(210, 20%, 98%)
$bg-dark-3 = hsl(192, 15%, 94%)
$bg-dark-4 = rgba(177, 184, 189, 0.5)
$bg-dark-5 = rgba(177, 184, 189, 0.75)

//$dot = hsl(192, 15%, 80%)
$dot = #e0eff2

$font-color = #606060
$font-color-2 = #707070
$font-color-3 = hsl(210, 5%, 48%)
$font-color-4 = hsla(210, 5%, 38%, 70%)

$item-content-padding = 5px

.gantt-schedule-timeline-calendar
  display: flex
  overflow: hidden
  color: $font-color

  & *
    font-size: 14px
    box-sizing: border-box

  &__helper
    &-center
      text-align: center
    &-dark
      background: $bg-dark-2

  &__list-column-header-resizer--active
    cursor: ew-resize
    & *
      -webkit-user-select: none; /* Safari 3.1+ */
      -moz-user-select: none; /* Firefox 2+ */
      -ms-user-select: none; /* IE 10+ */
      user-select: none; /* Standard syntax */
  &__vertical-scroll
    overflow:hidden
    overflow-y:visible
    flex-shrink: 0
    position: absolute
    right: 0px

  &__horizontal-scroll
    overflow: hidden
    overflow-x: scroll

  &__list
    border-collapse: collapse
    display: flex
    overflow: hidden
    flex-grow: 0
    flex-shrink: 0
    &-expander
      display: inline-flex
      height: var(--height)
      &-padding
        width: var(--width)
        height: var(--height)
        display: inline-block
      &-toggle
        cursor: pointer
        display: inline-block
        margin-right: 5px
        & svg
          vertical-align: middle
          width: 16px
          height: 16px
          margin-left: 10px
    &-column
      width: var(--width)
      position: relative
      &-rows
        height: var(--height)
        overflow: hidden
    &-column-row, &-column-header
      overflow: hidden
      text-overflow: ellipsis
      height: var(--height)
      line-height: var(--height)
      vertical-align: middle
      font-size: 14px
    &-column-row *
      overflow: hidden
      text-overflow: ellipsis
      vertical-align: middle
      line-height: var(--height)
    &-column-row
      border-bottom: 1px solid $bg-dark-2
      border-right: 1px solid $bg-dark-2
      &:nth-child(even)
        //background: $bg-dark-2
    &-column-header
      background: $bg-dark-1
      font-weight: 500
      color: $font-color-2
      height: var(--height)
      line-height: var(--height)
      display: flex
      &-content
        vertical-align: middle
        line-height: calc(var(--height) - 2px)
        margin-left: 4px
        width: 100%
        display: flex
      &-resizer
        display: inline-flex
        flex-grow: 1
        background:transparent
        vertical-align: middle
        height: var(--height)
        &-container, &-dots
          display: block
        &-container
          flex-grow: 1
        &-line
          position:absolute
          top: 0
          width: 0px;
          height:100%
          border-right: 2px dashed black
          display: var(--display)
          left: var(--left)
          z-index: 1000
        &-dots
          cursor: ew-resize
          background: transparent
          padding-top: 20px
          padding-left: 6px
          padding-right: 2px
          &-dot
            background: $dot
            width: 3px
            height: 3px;
            border-radius: 100%
            margin-bottom: 6px
            box-shadow: inset 1px 1px 0px rgba(0,0,0,0.05)

  &__chart
    flex-grow:1
    flex-shrink: 1
    &-calendar
      background: $bg-dark-1
      margin-right: -17px
      display: flex
      &-date
        text-align: center
        overflow: hidden
        color: $font-color-3;
        flex-grow: 0
        flex-shrink: 0
        user-select: none
        &.current
          box-shadow: inset 0px 0px 6px $bg-dark-5
          & *
            border-right: none
        &.previous *
          border-right: none
        &-formatted
          margin-top: 4px
          white-space: nowrap
          &-year
            font-size: 10px
            letter-spacing: 6px
          &-month
            font-size: 12px
            border-right: 1px solid $bg-dark-4
          &-day
            font-size: var(--day-size)
            font-weight: 500;
            line-height: 30px
            color: $font-color-4
            border-right: 1px solid $bg-dark-4
            text-shadow: 0px 5px 3px hsla(0, 0%, 0%, 0.08)
    &-timeline
      overflow: hidden
      position: relative
      &-inner
        overflow: hidden
      &-grid
        position: relative
        &-row
          display: flex
          text-align:center
          user-select: none
          &:nth-child(even)
            //background: $bg-dark-2
        &-column
          overflow: hidden
          position: absolute
          height: 100%
          top: 0px
          border-right: 1px solid $bg-dark-2
          pointer-events: none
        &-block
          flex-grow: 0
          flex-shrink: 0
          margin: auto 0
          vertical-align: middle
          overflow: hidden
          border-right: 1px solid $bg-dark-2
          border-bottom: 1px solid $bg-dark-2
          will-change: margin-left
          &.current
            background: $bg-dark-2
      &-dependency-lines
        position: absolute
        left: 0
        top: 0
      &-items
        position: absolute
        left: 0
        top: 0
        width: 100%
        height: 100%
        pointer-events: none
        &-row
          overflow: hidden
          pointer-events: none
          //will-change: scroll-position
          &-inner
            position: relative
            overflow: hidden
            height: 100%
          &-item
            position: absolute
            pointer-events: all
            padding: 4px 0px
            height: 100%
            user-select: none
            &--moving
              opacity: 0.5
            &-content
              user-select: none
              background: #E74C3C
              color: white
              vertical-align: middle
              padding: 0px 4px
              //border: 1px solid #D73C2C
              display: flex
              height: 100%
              line-height: calc(var(--row-height) - 10px)
              &-label
                flex-grow: 1
                overflow: hidden
                text-overflow: ellipsis
                white-space: nowrap
              &-resizer
                width: 8px
                background: rgba(255,255,255,0.1)
                cursor: ew-resize
                flex-shrink: 0