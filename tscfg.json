{
  "exclude": [
    "./index.d.ts",
    "./dist/**",
    "./*.conf.js",
    "./*.config.js",
    "./tests/**/*.js",
    "./node_modules/**/*.ts",
    "node_modules",
    "node_modules/**"
  ],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "target": "ES2015",
    "outFile": "./index.d.ts",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "module": "ESNext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "deep-state-observer": ["node_modules/deep-state-observer/index"],
      "deep-state-observer/*": ["node_modules/deep-state-observer/*"],
      "@neuronet.io/vido/*": ["node_modules/@neuronet.io/vido/*"],
      "dayjs": ["node_modules/dayjs/index"],
      "dayjs/*": ["node_modules/dayjs/*"],
      "csstype": ["node_modules/csstype/index"],
      "resize-observer-polyfill": ["node_modules/resize-observer-polyfill/dist/ResizeObserver.es.js"]
    },
    "esModuleInterop": true
  }
}
